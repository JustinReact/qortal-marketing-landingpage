{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run copy-views",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-views": "copyfiles -u 0 views/**/* dist",
    "watch-views": "chokidar \"views/**/*\" -c \"npm run copy-views\"",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "preserve": "npm run build",
    "serve": "concurrently \"tsc -w\" \"npm run watch-views\" \"nodemon dist/server.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@sendgrid/client": "^8.1.5",
    "@sendgrid/mail": "^8.1.5",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.17",
    "body-parser": "^2.2.0",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "firebase": "^11.7.1",
    "firebase-admin": "^13.4.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "validator": "^13.15.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.18",
    "@types/validator": "^13.15.0",
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1"
  }
}
